<%- include('partials/header'); %>

<style>
    body {
        margin: 0;
        padding: 0;
        background: #000;
        overflow-x: hidden;
    }
    
    #demo-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 600px;
        padding: 20px;
        margin-bottom: 50px;
    }
    
    video, canvas {
        border: 2px solid #333;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 
                    0 5px 15px rgba(0, 0, 0, 0.3);
        display: block;
        max-width: 100%;
        height: auto;
    }
    
    .controls {
        position: absolute;
        top: 120px;
        left: 10px;
        color: white;
        z-index: 10;
        background: rgba(0,0,0,0.8);
        padding: 10px;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }
        
        #demo-container {
            position: relative;
        }
        
        .audio-status {
            color: #0f0;
            font-size: 0.85rem;
            text-align: center;
            padding: 4px 0;
        }
        
        .controls button {
            background: #333;
            color: white;
            border: none;
            padding: 10px 12px;
            cursor: pointer;
            border-radius: 6px;
            font-size: 0.9rem;
            min-width: 120px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }
        
        .controls button:hover {
            background: #555;
        }
        
        .controls button:disabled {
            background: #222;
            cursor: not-allowed;
            opacity: 0.5;
        }
        
        footer {
            background: #111;
            border-top: 1px solid #333;
        }
        
        footer .text-muted {
            color: #999 !important;
        }
        
        footer .nav-link:hover {
            color: #fff !important;
        }
        
        .audio-status {
            color: #0f0;
            font-size: 0.9rem;
            margin-top: 10px;
            text-align: center;
        }
    </style>

    <div class="controls">
        <a href="/Projects" class="btn btn-outline-light">Back to Projects</a>
    </div>
    
    <div id="demo-container">
         <!-- Keep muted for autoplay; remove muted to allow video audio (user gesture likely required) -->
         <video id="distortion-video" 
             autoplay 
             loop 
             muted 
             playsinline
             style="max-width: 1200px; width: 100%; border-radius: 15px; border: 2px solid #333;">
            <source src="/videos/distortion.mp4" type="video/mp4">
            <source src="/videos/distortion.webm" type="video/webm">
            Your browser does not support the video tag.
        </video>
    </div>
    
    <%- include('partials/footer'); %>
    
    <script src="/js/distortion-video.js"></script>
